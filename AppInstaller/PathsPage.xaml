<Page x:Class="AppInstaller.PathsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppInstaller"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600">

    <Grid Height="500" VerticalAlignment="Top">
        <Image HorizontalAlignment="Left" Height="406" Width="200" VerticalAlignment="Top"/>
        <Rectangle Margin="0,0,400,90" Width="200" Fill="Beige"/>
        <Rectangle HorizontalAlignment="Center" Fill="#F5F5F5" Width="600" Height="56" VerticalAlignment="Top" Margin="0,407,0,0"/>
        <Rectangle HorizontalAlignment="Center" Fill="Purple" Width="600" Height="37" VerticalAlignment="Top" Margin="0,463,0,0"/>
        <Button Content="Continuer" HorizontalAlignment="Left" Height="26" Margin="471,422,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click_Next"/>
        <Button Content="Retour" HorizontalAlignment="Left" Height="26" Margin="359,422,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click_Back"/>
        <TextBox x:Name="defaultWorkdir" HorizontalAlignment="Left" Margin="340,237,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="149" Height="22" TextChanged="defaultWorkdir_TextChanged"/>
        <Label Content="Chemin d'installation" HorizontalAlignment="Left" Margin="211,235,0,0" VerticalAlignment="Top" Width="124" Height="26" VerticalContentAlignment="center" HorizontalContentAlignment="Right"/>
        <Button x:Name="changeDir" Content="Changer" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="494,237,0,0" VerticalAlignment="Top" Height="22" Width="53" Click="changeDir_Click"/>
        <Button x:Name="changeTemp" Content="Changer" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="494,275,0,0" VerticalAlignment="Top" Height="22" Width="53" Click="changeTemp_Click" />
        <TextBox x:Name="tempDir" HorizontalAlignment="Left" Margin="340,275,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="149" Height="22" TextChanged="tempDir_TextChanged"/>
        <Label Content="Chemin temporaire" HorizontalAlignment="Left" Margin="211,271,0,0" VerticalAlignment="Top" Width="124" Height="26" VerticalContentAlignment="center" HorizontalContentAlignment="Right"/>
    </Grid>
</Page>
