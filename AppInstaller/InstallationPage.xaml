<Page x:Class="AppInstaller.InstallationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppInstaller"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600">

    <Grid Height="500" VerticalAlignment="Top">
        <Image HorizontalAlignment="Left" Height="406" Width="200" VerticalAlignment="Top"/>
        <Rectangle Margin="0,0,400,90" Width="200" Fill="Beige"/>
        <Rectangle HorizontalAlignment="Center" Fill="#F5F5F5" Width="600" Height="56" VerticalAlignment="Top" Margin="0,407,0,0"/>
        <Rectangle HorizontalAlignment="Center" Fill="Purple" Width="600" Height="37" VerticalAlignment="Top" Margin="0,463,0,0"/>
        <Button Content="Terminer" HorizontalAlignment="Left" Height="26" Margin="471,422,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click_Stop"/>
        <Button Content="Retour" HorizontalAlignment="Left" Height="26" Margin="359,422,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click_Back"/>
        <Label Content="Installation des prérequis :" HorizontalAlignment="Left" Margin="234,221,0,0" VerticalAlignment="Top" Width="190"/>
        <ProgressBar x:Name="requiredBar" Minimum="0" Maximum="100" Value="0" HorizontalAlignment="Left" Height="10" Margin="234,197,0,0" VerticalAlignment="Top" Width="332"/>
        <Label Content="Installation de l'application :" HorizontalAlignment="Left" Margin="234,173,0,0" VerticalAlignment="Top" Width="190"/>
        <ProgressBar x:Name="contentBar" Minimum="0" Maximum="100" Value="0" HorizontalAlignment="Left" Height="10" Margin="234,0,0,0" VerticalAlignment="Center" Width="332"/>
    </Grid>
</Page>
